{
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "env": {
                    "CI": "false"
                }
            }
        },
        {
            "src": "backend/server.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "backend/server.py"
        },
        {
            "source": "/(.*)",
            "destination": "frontend/$1"
        }
    ]
}